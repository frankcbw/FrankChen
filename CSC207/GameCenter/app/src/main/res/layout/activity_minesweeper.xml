<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="fall2018.csc2017.slidingtiles.MineMainActivity" >

    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="116dp"
        android:layout_marginEnd="29dp"
        android:text="Start! Now!"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="30sp" />

    <fall2018.csc2017.slidingtiles.GestureDetectGridView
        android:id="@+id/mine_grid"
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="140dp"
        android:layout_marginBottom="0dp" >

    </fall2018.csc2017.slidingtiles.GestureDetectGridView>

    <TextView
        android:id="@+id/mineLeft"
        style="@android:style/Widget.DeviceDefault.TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="116dp"
        android:text="TextView"
        android:textColorLink="@android:color/black"
        android:textSize="30sp" />

    <ImageButton
        android:id="@+id/Thomas"
        android:layout_width="93dp"
        android:layout_height="103dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="153dp"
        android:layout_marginEnd="-10dp"
        android:layout_toStartOf="@+id/time"
        android:scaleType="fitCenter"
        />

</RelativeLayout>